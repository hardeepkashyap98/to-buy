<section style="  background: linear-gradient(-45deg,#24ff72,#9a4eff);padding-top: 3%; padding-bottom: 2.5%;">
    <div class="container">
        <div>
            <nav aria-label="breadcrumb" >
                <ol class="breadcrumb" style="background: none;">
                    <li class="breadcrumb-item" ><a href="#"style="color: white!important;" >Home</a></li>
                    <li class="breadcrumb-item" ><a href="#"style="color: white!important;">Profile</a></li>

                </ol>
            </nav>
            <h1 style="padding-left: 1.5%;color: white;">Update Your Listing</h1>
        </div>
    </div>
</section>
<div style="  -webkit-box-shadow: 0 3px 10px rgba(121, 135, 150, 0.1);
    box-shadow: 0 3px 10px rgba(121, 135, 150, 0.1);padding-bottom: 2%;">
    <div class="container">
        <div class="row" >
            <div class="col-12">
                <ul class="profile-list">
                    <li class="profile-listItem">
                        <a class="/profile" href=""><i class="fas fa-user"></i> Profile</a>
                    </li>
                    <li class="profile-listItem">
                        <a href="/ads"><i class="fab fa-adversal"></i> My Ads</a>
                    </li>

                    <li class="profile-listItem">
                        <a href="/ad-favourite"><i class="far fa-bookmark"></i>  Favourite Ads </a>
                    </li>
                    <li class="profile-listItem">
                        <a href="/ad-done"><i class="far fa-file-archive"></i> Archeved Ads </a>
                    </li>
                    <li class="profile-listItem">
                        <a href="/ad-pending"><i class="fa fa-bolt"></i> Pending Approval</a>
                    </li>
                    <li class="profile-listItem">
                        <a class="open-password-form" href="/password"><i class="fas fa-lock"></i> Change Password</a>
                    </li>
                    <li class="profile-listItem">
                        <a href="/logout"><i class="fa fa-cog"></i> Logout</a>
                    </li>
                </ul>

            </div>
        </div>
    </div>
</div>
<section class="user-profile section">
    <div class="container">
        <div class="row" style=" padding:3% 1% 3% 1%;box-shadow: 0px 1px 3px 0px rgba(0, 0, 0, 0.1);margin-bottom: 5%">
            <div class="col-12">
                <h3 class="widget-header user" style="text-align: center;"><i class="fas fa-upload"></i> Update Your Listing </h3>
            </div>
        </div>
        <div class="container">
            <div class="row" >
                <div class="col-lg-12 col-md-12 col-sm-12" style="padding: 0% 10% 0% 10%;">
                    <form method="post">
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label" style="color: black">Title</label>
                            <div class="col-sm-10">
                                <input  class="form-control" id="name"value="<%=listing.name%>" name="name" placeholder="Title">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword3" class="col-sm-2 col-form-label"style="color: black">Description</label>
                            <div class="col-sm-10">
                                <textarea  name="description" style="width:100%;min-height:550px" class=" eric-textarea form-control" id="description" placeholder="Description.......">
                                    <%-listing.description%>
                                </textarea>
                            </div>

                        </div>


                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label" style="color: black">Pre Price</label>
                            <div class="col-sm-10">
                                <input  class="form-control" id="price" value="<%=listing.price%>"name="price" placeholder="Product Price...">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label" style="color: black">Sell Price</label>
                            <div class="col-sm-10">
                                <input  class="form-control" value="<%=listing.SellPrice%>"id="SellPrice" name="SellPrice" placeholder="Sell Price...">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label" style="color: black">Brand</label>
                            <div class="col-sm-10">
                                <input  class="form-control" value="<%=listing.Brand%>"id="Brand" name="Brand" placeholder="Brand">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="inputState"  class="col-sm-2 col-form-label" style="color: black">Condition</label>
                            <div class="col-sm-10">
                                <select id="inputState" name="condition" class="form-control">
                                    <option value="<%=listing.condition%>" selected><%=listing.condition%></option>
                                    <option value="new">New</option>
                                    <option value="used">Used</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputState"  class="col-sm-2 col-form-label" style="color: black">Category</label>
                            <div class="col-sm-10">
                                <select id="inputState" name="category" class="form-control">
                                    <option value="<%=listing.category%>" selected><%=listing.category%></option>
                                    <option value="Electronics">Electronics</option>
                                    <option value="Restaurants">Restaurants</option>
                                    <option value="Shoppings">Shoppings</option>
                                    <option value="Vehicles">Vehicles</option>
                                    <option value="Pets">Pets</option>
                                    <option value="Services">Services</option>
                                    <option value="Real Estate">Real Estate</option>
                                    <option value="Others">Others</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="image"  class="col-sm-2 col-form-label" style="color: black">Image</label>
                            <div class="col-sm-10">

                                <input type="file" class="form-control-file d-inline2" name="image" id="image" style="visibility: hidden;position: absolute;" >
                                <img id="blah2" src="../images/user/<%=listing.image%>" height="25px" width="25px" class="rounded-circle">
                            </div>
                        </div>
                        <fieldset class="form-group">
                            <div class="row">
                                <legend class="col-form-label col-sm-2 pt-0">Active</legend>
                                <div class="col-sm-10">
                                    <%if(listing.active==true){%>
                                    <div class="custom-control custom-radio">
                                        <input type="radio" class="custom-control-input" id="customControlValidation2" value=true name="active" checked required>
                                        <label class="custom-control-label" for="customControlValidation2">Yes</label>
                                    </div>
                                    <div class="custom-control custom-radio">
                                        <input type="radio" class="custom-control-input" id="customControlValidation1" value=false name="active" required>
                                        <label  class="custom-control-label" for="customControlValidation1">No</label>
                                    </div>
                                    <%}else {%>
                                    <div class="custom-control custom-radio">
                                        <input type="radio" class="custom-control-input" id="customControlValidation2" value=true name="active" required>
                                        <label class="custom-control-label" for="customControlValidation2">Yes</label>
                                    </div>
                                    <div class="custom-control custom-radio">
                                        <input type="radio" class="custom-control-input" id="customControlValidation1" value=false name="active" checked  required>
                                        <label  class="custom-control-label" for="customControlValidation1">No</label>
                                    </div>
                                    <%}%>
                                </div>
                            </div>
                        </fieldset>

                        <div class="form-group row" style="float: right">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-main">Update It </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

